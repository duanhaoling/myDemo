<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rxjava_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mydemo.test_java.RxjavaTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/testRxjava1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本用法1" />

        <Button
            android:id="@+id/testRxjava2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本地图片展示" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/testRxjava3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加载网络图片" />

        <Button
            android:id="@+id/testRxjava4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="map与flatmap" />

        <Button
            android:id="@+id/testRxjava5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Readme" />

        <TextView
            android:id="@+id/tv_readme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/testRxjava6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本用法6" />

        <Button
            android:id="@+id/testRxjava7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本用法7" />

        <Button
            android:id="@+id/testRxjava8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本用法8" />

        <Button
            android:id="@+id/testRxjava9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基本用法9" />

    </LinearLayout>
</ScrollView>